                                                                                                                                                                                            <label class="control-label col-sm-2"><strong>自分の行動</strong></label>
                                                                                                                                                                                            <div class="col-sm-12">
                                                                                                                                                                                                <textarea class="form-control" asp-for="Act" style="height: 100px;" disabled></textarea>
                                                                                                                                                                                                <span asp-validation-for="Act" class="text-danger"></span>
                                                                                                                                                                                            </div>
                                                                                                                                                                                        </div>

