                                                                                                                                                                                                                            <div class="col-sm-12">
                                                                                                                                                                                                                                <textarea class="form-control" asp-for="PowerDev" style="height: 100px;" disabled></textarea>
                                                                                                                                                                                                                                <span asp-validation-for="PowerDev" class="text-danger"></span>
                                                                                                                                                                                                                            </div>
                                                                                                                                                                                                                        </div>
                                                                                                                                                                                                                                        <div class="form-group row mb-3">
                                                                                                                                                                                                                                            <label class="control-label col-sm-2"><strong>考えたこと</strong></label>
                                                                                                                                                                                                                                            <div class="col-sm-12">
                                                                                                                                                                                                                                                <textarea class="form-control" asp-for="Think" style="height: 100px;" disabled></textarea>
                                                                                                                                                                                                                                                <span asp-validation-for="Think" class="text-danger"></span>
                                                                                                                                                                                                                                            </div>
                                                                                                                                                                                                                                        </div>}

                </form>
            </div>
        </div>
        <div class="p-2 msg-card-body">
            @*neww*@
            <div class="chat-body">
                <ul class="list-unstyled" data-bind="foreach: chatMessages">
                    <li>
                        <div class="chat-message d-flex "
                             data-bind="css: $data.isMine() === true ? 'ismine' : 'isother'">
                            <div class="left-side">
                                <img src="/images/teacher.png" class="message-avatar"
                                     data-bind="attr: { src: $data.avatar() }" />
                                <p class="text1" data-bind="text: $data.userName"></p>
                            </div>

                            <div class="message-content d-flex flex-column">

                                <div class="bubble">
                                    <strong style="color:black" data-bind="text: $data.userName"></strong>
                                    <!-- ko if: $data.isEdit() == true -->
                                    <div>
                                        <div>
                                            <textarea type="text" value=""
                                                      data-bind="value: $data.content"
                                                      placeholder="What's on your mind?"></textarea>
                                        </div>
                                        <div>
                                            <button data-bind="click: $parent.updateMessage.bind($data, $data.messageId())">Sửa</button>
                                        </div>
                                    </div>
                                    <!-- /ko -->
                                    <!-- ko ifnot: $data.isEdit() == true -->
                                    <p class="text-white" data-bind="html:$data.content"></p>
                                    <!-- /ko -->

                                    <br>
                                    <i class="far fa-clock"></i>
                                    <span style="font-size: small;" class="msg_time_send" data-bind="text:$data.timestamps"></span>
                                </div>


                                @*<div class="">
                <span class="author" data-bind="text:$data.userName"></span>
                <span class="timestamp">
                    <i class="far fa-clock"></i>
                    <span data-bind="text:$data.timestamps"></span>
                </span>
            </div>*@

                            </div>
                            <!-- ko if: $data.isMine() == true -->
                            <div class="btn-group my-auto">
                                <a href="#" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-three-dots-vertical"></i></a>
                                <ul class="dropdown-menu dropdown-custom">
                                    <li>
                                        <button data-bind="click: $parent.editMessage.bind($data, $data.messageId())">Sửa</button>
                                        <button data-bind="click: $parent.deleteMessage.bind($data, $data.messageId())">Xóa</button>
                                    </li>
                                </ul>
                            </div>
                            <!-- /ko -->
                        </div>
                    </li>
                </ul>
            </div>

            <div class="chat-input chat_box">
                <div class="input-group">
                    <textarea id="chat-message" type="text" value=""
                              data-bind="value:message, valueUpdate: 'afterkeydown', event: { keypress: onEnter }"
                              class="form-control shadow-none m-0" style="border-radius:12px" placeholder=". . .コメント追加"></textarea>

                    <button class="actions d-flex align-items-center">
                        <i class="fas fa-paper-plane"
                           id="btn-send-message" data-bind="click: sendNewMessage"></i>
                    </button>
                </div>
            </div>

        </div>
    </div>

</div>

