                                                            <div class="col-sm-12">
                                                                <textarea class="form-control" asp-for="Activities" style="height: 100px;"></textarea>
                                                                <span asp-validation-for="Activities" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                                        <div class="form-group row mb-3">
